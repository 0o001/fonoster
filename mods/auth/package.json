{
  "name": "@fonos/auth",
  "version": "0.0.109",
  "description": "Authentication Module",
  "author": "Raul Sanchez <rsanchez@fonoster.com>",
  "homepage": "https://github.com/fonoster/fonos#readme",
  "license": "MIT",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "prebuild": "rimraf ./dist tsconfig.tsbuildinfo",
    "build": "tsc -b tsconfig.json",
    "postbuild": "cp -a ./src/service/protos/ ./dist/service/protos",
    "start": "cross-env NODE_ENV=dev nodemon src/service/runner"
  },
  "bin": {
    "run": "dist/service/runner.js",
    "healthcheck": "dist/service/healthcheck.js"
  },
  "nodemonConfig": {
    "watch": [
      "../"
    ],
    "ext": "ts",
    "exec": "ts-node",
    "ignore": "**/*.d.ts"
  },
  "directories": {
    "src": "src",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fonoster/fonos.git"
  },
  "bugs": {
    "url": "https://github.com/fonoster/fonos/issues"
  },
  "dependencies": {
    "@fonos/certs": "^0.0.109",
    "@fonos/common": "^0.0.109",
    "@fonos/errors": "^0.0.109",
    "@fonos/logger": "^0.0.109",
    "express": "^4.17.1",
    "grpc": "^1.24.7",
    "grpc-promise": "^1.4.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0"
  },
  "gitHead": "8efbe2e8601b3a0618e770804a205e8584d49580"
}
