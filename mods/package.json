{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@yaps/appmanager": "^0.0.2",
    "@yaps/core": "^0.0.2",
    "@yaps/ctl": "^0.0.2",
    "@yaps/dispatcher": "^0.0.2",
    "@yaps/numbers": "^0.0.2",
    "@yaps/domains": "^0.0.3",    
    "@yaps/sdk": "^0.0.2",
    "@yaps/storage": "^0.0.2",
    "@yaps/tts": "^0.0.2",
    "@yaps/voice": "^0.0.2",
    "assert": "^2.0.0",
    "eslint": "^5.16.0",
    "husky": "^4.2.3",
    "jsdoc-to-markdown": "^5.0.3",
    "jsonwebtoken": "^8.5.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "node-gyp": "^6.1.0",
    "nyc": "^15.0.0",
    "prettier-standard": "^9.1.1"
  },
  "scripts": {
    "docs": "node ./docs",
    "test": "NODE_ENV=dev nyc mocha **/test/*.test.js",
    "clean": "rm **/package-lock.json; lerna clean -y",
    "format": "prettier-standard '**/*.js'"
  },
  "lint-staged": {
    "**/*.js": ["prettier-standard"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty && node docs.js && git add ../docs"
    }
  }
}
