{
  "name": "root",
  "private": true,
  "scripts": {
    "docs": "node ./docs",
    "test": "NODE_ENV=dev mocha **/test/*.unit.test.js",
    "clean": "rm **/package-lock.json; lerna clean -y",
    "format": "prettier-standard '**/*.js'"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "fluent-logger": "^3.4.1",
    "google-protobuf": "^3.11.4",
    "grpc": "^1.24.2",
    "minio": "^7.0.15",
    "walk": "^2.3.14",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.2.3",
    "jsdoc-to-markdown": "^5.0.3",
    "jsonwebtoken": "^8.5.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "node-gyp": "^6.1.0",
    "nyc": "^15.0.0",
    "prettier-standard": "^9.1.1",
    "rewire": "^5.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier-standard"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty && node docs.js && git add ../docs"
    }
  }
}
