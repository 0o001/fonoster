{
  "version": "0.0.2",
  "name": "fonos",
  "private": true,
  "scripts": {
    "docs": "node ./docs",
    "test": "NODE_ENV=dev mocha **/*.unit.test.js",
    "pretest": "npm run build",
    "format": "prettier-standard '**/*.js'",
    "bootstrap": "lerna bootstrap --hoist",
    "postinstall": "npm run bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish"
  },
  "bin": {
    "run-mediacontroller": "mediacontroller.js",
    "run-apiserver": "apiserver.js"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "node-gyp": "^6.1.0"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.2.3",
    "jsdoc-to-markdown": "^5.0.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "prettier-standard": "^9.1.1",
    "rewire": "^5.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier-standard"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty && node docs.js && git add ../docs"
    }
  }
}
